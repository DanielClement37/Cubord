{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@services/*":   ["src/services/*"],
      "@store/*":      ["src/store/*"],
      "@hooks/*":      ["src/hooks/*"],
      "@types/*":      ["src/types/*"],
      "@contexts/*":   ["src/contexts/*"],
      "@boot/*":       ["src/boot/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
